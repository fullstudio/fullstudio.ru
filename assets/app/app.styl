@import '_vars'
@import '_sticky-footer'

// container
body
	font-family: 'HelveticaNeue-Light', sans-serif
	font-size: 13px
	color: #000
	// background-color: #1D2A3B

.layout__stikyWrap
	display: flex
	flex: 1 0 auto
	flex-direction: column

.map
	width: 100%
	height: 350px
	margin-bottom: 30px

.pageHeader
	height: 110px
	background: url(/img/banner/slidenotwide.jpg)
	margin-bottom: 20px
	.pageTitle
		color: #45413D
		padding: 0 30px
		height: 110px
		line-height: 110px
		background: rgba(255,255,255,.7)
		display: inline-block

// type
main
	padding: 20px 0
a:hover, a:focus, a:link
	text-decoration: none

.img-thumbnail
	width: 100%

.vacancies
	height: 110px
	background-color: red
// PhotoGallery
.gallery
	// display: block
	list-style: none
	// margin: 0
	padding: 0
	li
		margin-bottom: 20px
		display: inline-block
		vertical-align: top
		a
			transition: border 0.4s
			display: inline-block
			width: 100%
			height: 200px
			&:hover
				border: 1px solid #000
			img
				width: 200px
				height: 200px
			.pseudo_img
				background-size: cover
				background-repeat: no-repeat
				width: 100%
				height: 100%
//Our production
.production
	// display: block
	list-style: none
	// margin: 0
	padding: 0
	li
		vertical-align: top
		margin-bottom: 20px
		a
			width: 100%
			height: 230px
			.figure-caption
				transition: color 0.4s
			&:hover
				.figure-caption
					color: #000
			img
				width: 100%
				height: 230px
			.pseudo_img
				background-size: cover
				background-repeat: no-repeat
				width: 100%
				height: 100%
