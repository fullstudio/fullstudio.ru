.download
  color #ffffff
  .color-overlay
    padding-top 110px
    padding-bottom 70px
  .download-container
    padding-bottom 80px
  .subscription-form-container
    padding-bottom 80px
  .subscription-form
    .input-box
      height 57px
      padding-left 20px
      width 320px
      -webkit-box-shadow none
      box-shadow none
      background #FFF
      border 2px solid #FFF
  h2
    margin-bottom 30px

.download .subscription-form .input-box:focus, 
.download .subscription-form .input-box:active
  color #000
  font-weight 400

.download .subscription-form .subscription-success,
.download .subscription-form .subscription-error
  display none