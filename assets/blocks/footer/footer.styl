footer
  background #222222
  .contact-box
    margin-bottom 78px
    .contact-button
      height 80px
      width 80px
      border-radius 50%
      margin auto
      position relative
      font-size 30px
      line-height 60px
      vertical-align middle
      margin-top -40px
      background #232323
      -webkit-box-shadow 0px 0px 0px 3px #232323
      box-shadow 0px 0px 0px 3px #232323
      -webkit-backface-visibility hidden
      -webkit-background-clip padding-box
      -moz-background-clip padding
      background-clip padding-box
      &:hover
        color #ffffff
    .expanded-contact-form
      margin-top 40px
      display none
      .input-box
        margin-bottom 10px
        margin-top 10px
        height 50px
        -webkit-box-shadow none
        box-shadow none
        background #222222
        border 1px solid #161616
      .textarea-box
        margin-top 20px
        margin-bottom 20px
        -webkit-box-shadow none
        box-shadow none
        background #222222
        border 1px solid #161616
  .social-icons
    margin-top 30px
    border-bottom 1px solid #111111
    padding-bottom 50px
    li
      display inline-block
      margin 5px
      a
        font-size 30px
        color #636363
  .copyright
    color #808080
    padding-top 10px
    margin-bottom 50px

footer .contact-box .expanded-contact-form .success,
footer .contact-box .expanded-contact-form .error
    display none

footer .contact-box .expanded-contact-form .textarea-box:active,
footer .contact-box .expanded-contact-form .textarea-box:focus
    color #FFF  